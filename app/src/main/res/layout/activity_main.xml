<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">
    <!-- Overlay for drawing bounding boxes -->
    <com.example.objecttrackerapp.OverlayView
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pan_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pan: 500" />

    <SeekBar
        android:id="@+id/pan_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tilt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilt: 500" />

    <SeekBar
        android:id="@+id/tilt_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESP32 Output:"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:scrollbarStyle="insideOverlay">

        <TextView
            android:id="@+id/serial_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:text=""
            android:textSize="14sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/tilt_homing_Button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Tilt Homing"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pan_homing_Button" />

        <Button
            android:id="@+id/pan_homing_Button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Pan Homing"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tilt_homing_Button"
            app:layout_constraintEnd_toStartOf="@id/pan_tilt_homing_Button" />

        <Button
            android:id="@+id/pan_tilt_homing_Button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Homing main"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pan_homing_Button"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- Slider to adjust confidence threshold -->
        <SeekBar
            android:id="@+id/confidenceSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp"/>

        <!-- Second slider (zoom) a little above -->
        <SeekBar
            android:id="@+id/zoomSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/confidenceSlider"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>



</LinearLayout>


